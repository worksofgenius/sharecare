<% if @my_bookings.empty? %>
  <p>No bookings found.</p>
  <p><%= link_to 'Find an activity', listings_path %></p>
<% else %>
  <% @my_bookings.each do |booking| %>
    <div class="booking-list-card">
      <%= link_to listing_path(booking) do %>
        <strong><%= booking.listing.title.capitalize %></strong>
      <% end %>
      <div class="booking-date">
        <p><%= booking.start_date.to_s(:short) %></p>
        <p><%= booking.end_date.to_s(:short) %></p>
      </div>
      <div class="booking-status">
        <%= link_to root_path, class: "status" do %>
          <%= booking.status %>
        <% end %>
        <%= link_to 'Accept', root_path %>
        <%= link_to 'Cancel', root_path %>
      </div>
    </div>
  <% end %>
<% end %>
