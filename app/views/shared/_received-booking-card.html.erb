<% if @my_listings.empty? %>
  <p>You have no listings.</p>
  <p><%= link_to 'Create a new listing', new_listing_path %></p>
<% else %>
  <% @my_listings.each do |listing| %>
    <% if listing.bookings.nil? %>
      <p>You have no bookings.</p>
    <% else %>
    <% listing.bookings.each do |booking| %>
      <div class="booking-list-card">
        <%= link_to listing_path(listing) do %>
          <strong><%= booking.listing.title.capitalize %></strong>
        <% end %>
        <div class="booking-date">
          <p><%= booking.start_date.to_s(:short) %></p>
          <p><%= booking.end_date.to_s(:short) %></p>
        </div>
          <% if booking.status == "Pending" %>
            <p><%= booking.status %></p>
            <%= simple_form_for status_path do |f| %>
            <%= f.hidden_field :status, name:"booking_id", value: booking.id, class: "status" %>
            <%= f.button :submit, name: "status", value: "Accept", class: "status" %>
            <%= f.button :submit, "Cancel", name: "status", value: "Cancel", class: "status" %>
            <% end %>
          <% else %>
            <p class="status"><%= booking.status %>ed</p>
          <% end %>
      </div>
    <% end %>
    <% end %>
  <% end %>
<% end %>
